# Builds sfdt_ibrahim/sfdt_ibrahim:latest-conda image on DockerHub https://hub.docker.com/r/sfdt_ibrahim/sfdt_ibrahim
# Image is optimized for SFDT_Ibrahim Anaconda (https://anaconda.org/conda-forge/sfdt_ibrahim) installation and usage

# Start FROM miniconda3 image https://hub.docker.com/r/continuumio/miniconda3
FROM continuumio/miniconda3:latest

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_BREAK_SYSTEM_PACKAGES=1

# Downloads to user config dir
ADD https://github.com/sfdt_ibrahim/assets/releases/download/v0.0.0/Arial.ttf \
    https://github.com/sfdt_ibrahim/assets/releases/download/v0.0.0/Arial.Unicode.ttf \
    /root/.config/SFDT_Ibrahim/

# Install linux packages
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    libgl1 \
    && rm -rf /var/lib/apt/lists/*

# Copy contents
ADD https://github.com/sfdt_ibrahim/assets/releases/download/v8.3.0/yolo11n.pt .

# Install conda packages
# mkl required to fix 'OSError: libmkl_intel_lp64.so.2: cannot open shared object file: No such file or directory'
RUN conda config --set solver libmamba && \
    conda install pytorch torchvision pytorch-cuda=12.1 -c pytorch -c nvidia && \
    conda install -c conda-forge sfdt_ibrahim mkl
    # conda install -c pytorch -c nvidia -c conda-forge pytorch torchvision pytorch-cuda=12.1 sfdt_ibrahim mkl

# Remove extra build files
RUN rm -rf /root/.config/SFDT_Ibrahim/persistent_cache.json

# Usage Examples -------------------------------------------------------------------------------------------------------

# Build and Push
# t=sfdt_ibrahim/sfdt_ibrahim:latest-conda && sudo docker build -f docker/Dockerfile-cpu -t $t . && sudo docker push $t

# Run
# t=sfdt_ibrahim/sfdt_ibrahim:latest-conda && sudo docker run -it --ipc=host $t

# Pull and Run
# t=sfdt_ibrahim/sfdt_ibrahim:latest-conda && sudo docker pull $t && sudo docker run -it --ipc=host $t

# Pull and Run with local volume mounted
# t=sfdt_ibrahim/sfdt_ibrahim:latest-conda && sudo docker pull $t && sudo docker run -it --ipc=host -v "$(pwd)"/shared/datasets:/datasets $t
